<Window x:Class="ZenithVirtualAssistant.Views.WidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zenith Widget" Height="150" Width="300" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Topmost="True">
	<Border Background="#80000000" CornerRadius="10" Margin="5">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<TextBlock x:Name="StatusText" Text="Listening..." Foreground="White" FontSize="14" Margin="10"/>
			<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
				<TextBlock x:Name="CpuText" Foreground="White" Margin="5"/>
				<TextBlock x:Name="MemoryText" Foreground="White" Margin="5"/>
				<TextBlock x:Name="DiskText" Foreground="White" Margin="5"/>
			</StackPanel>
		</Grid>
	</Border>
</Window>